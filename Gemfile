source 'https://rubygems.org'

group :development, :test do
  # Interactive debugger
  gem 'pry-byebug'

  # Test framework
  gem 'rspec'

  # Automatic test runner
  gem 'guard-rspec'
  gem 'guard-rubocop'

  # Linters
  gem 'rubocop'
  gem 'rubocop-rspec'

  # Lock rubocop parser to a specific version
  # https://github.com/bbatsov/rubocop/issues/1934
  gem 'parser', '~> 2.2.2.6'
end
